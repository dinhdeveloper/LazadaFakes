<?xml version="1.0" encoding="utf-8"?>
<b.laixuantam.myaarlibrary.widgets.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHeaderPackDetail"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    app:rv_backgroundColor="@color/gray_very_light"
    app:rv_cornerRadius_TL="5dp"
    app:rv_cornerRadius_TR="5dp"
    app:rv_strokeColor="@color/gray"
    app:rv_strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="STT"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Trạng thái"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</b.laixuantam.myaarlibrary.widgets.roundview.RoundLinearLayout>