<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_above="@+id/bubbleTabBar"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/bubbleTabBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:paddingVertical="@dimen/dp10"
                android:layout_marginVertical="@dimen/dp10"
                android:text="Nhập sản phẩm"
                android:textColor="@color/color_orange"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="Tên sản phẩm(*)"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edtNameProduct"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập tên sản phẩm"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->

            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="Giá sản phẩm(*)"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.canhdinh.lib.roundview.CurrencyEditText
                    android:id="@+id/edtPriceProduct"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập giá sản phẩm"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="Số lượng nhập(*)"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.canhdinh.lib.roundview.CurrencyEditText
                    android:id="@+id/edtQuantityProduct"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập số lượng nhập"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="Tồn kho an toàn"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.canhdinh.lib.roundview.CurrencyEditText
                    android:id="@+id/edtSafeStock"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập tồn kho an toàn"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="Người nhập(*)"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edtNameCustomer"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập tên người nhập"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->

            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/dp5"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotu_regular"
                    android:text="SĐT người nhập(*)"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.canhdinh.lib.edittext.FormattedEditText
                    android:id="@+id/edtCustomerPhone"
                    android:inputType="phone"
                    android:maxLength="13"
                    app:fet_clearDrawable="@drawable/icon_clear"
                    app:fet_drawableGravity="fet_center"
                    app:fet_drawablePadding="4dp"
                    app:fet_formatStyle="344"
                    app:fet_mode="mode_simple"
                    app:fet_placeholder="."
                    android:imeOptions="actionDone"
                    android:paddingHorizontal="@dimen/dp5"
                    android:hint="Nhập SĐT người nhập"
                    android:background="@drawable/custom_bg_item"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
            <!--end-->

            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:id="@+id/btnSubmit"
                android:layout_marginVertical="@dimen/dp20"
                android:textColor="@color/white"
                android:text="Thêm mới"
                android:gravity="center"
                android:layout_gravity="center"
                app:rv_cornerRadius="22dp"
                app:rv_backgroundColor="@color/color_orange"
                android:layout_width="200dp"
                android:layout_height="42dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>